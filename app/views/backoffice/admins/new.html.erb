 <div id="page-wrapper">
        
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Barganhaki</h1>

                        <% if notice %>
                        <div class="alert alert-success">
                                <%= notice %> <a href="#" class="alert-link">Alert Link</a>.
                            </div>
                    <% end %>
                    <% if @admin.errors.any? %>
                            <% @admin.errors.full_messages.each do |message| %>
                        <div class="alert alert-danger">
                                <%= message %>
                            
                              <% end %>
                         </div>
                        <% end  %>
                         <div class="panel panel-default">
                        <div class="panel-heading">
                            Novo Administrador
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                    
                                    </thead>
                                    <tbody>
                                    <%= form_for ([:backoffice, @admin]) do |f| %>
                                       <div class="col-lg-6">
                                        <label>Email:</label>
                                            <div class="form-group">
                                                <%= f.text_field :email, class: "form-control", placeholder: "usuario@usuario.com"%>      
                                            </div>

                                        <label>Senha:</label>
                                            <div class="form-group">
                                                <%= f.password_field :password, class: "form-control", placeholder: "******" %>        
                                            <div>
                                        </br>    
                                        <label>Confirmar senha:</label>
                                            <div>
                                                <%= f.password_field :password_confirmation, class: "form-control" , placeholder: "******" %>
                                            </div>
                                        </br>
                                            <%= f.submit "Salvar" %>
                                        </div>
                                           
                                    <% end %>
                                      
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-6 -->
                    
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
