<div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Cadastro de empresas</h1>
                        <% if notice %>
                        <div class="alert alert-success">
                                <%= notice %> 
                            </div>
                    <% end %>
                         <div class="panel panel-default">
                        <div class="panel-heading">
                            Empresas ativas
                            <%= link_to new_backoffice_company_path, class: "btn btn-success btn-circle pull-right", style:"margin-top: -5px" do   %>
                                <i class="fa fa-plus"></i>
                            <% end %>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Logomarca</th>
                                            <th>Name</th>
                                            <th>Cnpj</th>
                                            <th>Endere√ßo</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% @companies.each do |empresas| %>
                                        <tr>
                                            <td><%= empresas.id %></td>
                                            <td class="text-center"><%= image_tag empresas.image, class: "logo" %></td>
                                            <td><%= empresas.name   %></td>
                                            <td><%= empresas.cnpj   %></td>
                                            <td><%= empresas.address%></td>
                                            <td style="width: 150px">
                                            <%= link_to edit_backoffice_company_path(empresas), class:"btn btn-primary btn-circle btn-sm" do  %>
                                                <i class="fa fa-edit"></i>
                                            <% end %>
                                            
                                            </td>     
                                        </tr>
                                     <% end %>   
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-6 -->
                    
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
</div>