 <div id="page-wrapper">
        
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Barganhaki</h1>
                         <div class="panel panel-default">
                        <div class="panel-heading">
                            Nova empresa
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                    
                                    </thead>
                                    <tbody>
                                    <%= form_for ([:backoffice, @company]) do |f| %>
                                       <div class="form-group col-xs-4">
                                            <label for="exampleInputFile">Imagem</label><br>
                                                
                                                <% if @company.small_image.present? %>
                                                    <%= image_tag @company.small_image, class: "thumbnail" %>    
                                                <% end %>
                                                
                                                <label for="exampleInputFile">Upload de Imagem</label>
                                                <%= f.file_field :image , calss: "form-control"%>
                                        </div>
                                       <div class="col-lg-4">
                                        <label>Nome:</label>
                                            <div class="form-group">
                                                <%= f.text_field :name, class: "form-control", placeholder: "Le Bistro Restorante"%>      
                                            </div>
                                        </div>

                                        <div class="col-lg-4">
                                        <label>Cnpj:</label>
                                            <div class="form-group">
                                                <%= f.text_field :cnpj, class: "form-control", placeholder: "00.000.000/0000-00"%>      
                                            </div>
                                        </div></br></br>

                                        <div class="col-lg-4">
                                        <label>Endereço:</label>
                                            <div class="form-group">
                                                <%= f.text_field :address, class: "form-control", placeholder: "Rua Aderbal Nery 900"%>      
                                            </div>
                                            
                                        </div>
                                        <div class="col-lg-4">
                                        <label>Bairro:</label>
                                            <div class="form-group">
                                                <%= f.text_field :neighborhood, class: "form-control", placeholder: "Central"%>      
                                            </div>
                                            
                                        </div>
                                        <div class="col-lg-4">
                                        <label>Cep:</label>
                                            <div class="form-group">
                                                <%= f.text_field :zipcode, class: "form-control", placeholder: "00.000-000"%>      
                                            </div>
                                            
                                        </div>
                                         <div class="col-lg-4">
                                        <label>Cidade:</label>
                                            <div class="form-group">
                                                <%= f.text_field :country, class: "form-control", placeholder: "Macapá"%>      
                                            </div>
                                            
                                        </div>
                                         <div class="col-lg-4">
                                        <label>Longitude:</label>
                                            <div class="form-group">
                                                <%= f.text_field :longitude, class: "form-control", placeholder: "-56.0239476"%>      
                                            </div>
                                            
                                        </div>
                                         <div class="col-lg-4">
                                        <label>Latitude:</label>
                                            <div class="form-group">
                                                <%= f.text_field :latidude, class: "form-control", placeholder: "0.0239476"%>      
                                            </div>
                                            
                                        </div>
                                       

                                        <div class="col-lg-4">
                                            <label>Categoria</label>
                                             <div class="form-group">
                                            <%= f.collection_select :category_id , Category.all , :id, :description, {}, { class: "form-control"} %>
                                        </div>
                                        </div>
            
                                         <div class="col-lg-4">
                                            <label>Usuarios</label>
                                            <div cass="form-group">
                                            <%= f.collection_select :user_id , User.all , :id, :email, {}, { class: "form-control"} %>
                                        </div></br>
                                        </div>
                                        <div class="col-lg-4">
                                        </div>
                                        <div class="col-lg-4">
                                        </div>
                                        <div class="col-lg-4">
                                        <div class="form-group ">
                                            <%= f.submit "Salvar" , class: "btn btn-success pull-right"%>
                                        </div>
                                        </div>
                                            
                                
                                    <% end %>
                                      
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-6 -->
                    
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
