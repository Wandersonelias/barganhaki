<div class="container">
<h1>Meus Produtos</h1>
<div class="row">
<div class="col-md-12">
<table class="table table-hover">
<div class="panel-heading">
                            <%= link_to new_backoffice_product_path, class: "btn btn-success btn-circle pull-right", style:"margin-top: -5px" do   %>
                                <i class="fa fa-plus"></i>
                            <% end %>
                        </div>
  <thead calss="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Imagem</th>
      <th scope="col">Titulo</th>
      <th scope="col">Preço de venda</th>
      <th scope="col">Categoria</th>
      <th scope="col">User</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
<% @products.each do |produtos| %>  
  <tbody>
    <tr>
      <td width="50px"><%= produtos.id %></td>
      <td width="100px"><%= image_tag produtos.image.url(:small) %></td>
      <td width="250px"><%= produtos.title %></td>
      <td width="120px"><%= produtos.pricefor %></td>
      <td width="150px"><%= produtos.category.description %></td>
      <td width="150px"><%= produtos.user.name %></td>
      <td>
        <%= link_to edit_backoffice_product_path(produtos.id), class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
        <% end %>
          
          <%= link_to "/backoffice/products/(#{produtos.id})", class: "btn btn-danger", method: :delete do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir
        <% end %>
      </td>
      
    </tr>
  </tbody>

<% end %>
</table>

</div>
</div>
