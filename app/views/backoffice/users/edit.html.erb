<div id="page-wrapper">
        
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Barganhaki</h1>
                         <div class="panel panel-default">
                        <div class="panel-heading">
                            Editando Administradores
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                         <% if notice %>
                        <div class="alert alert-success">
                                <%= notice %> <a href="#" class="alert-link">Alert Link</a>.
                            </div>
                        <% end %>
                        <% if @user.errors.any? %>
                            <% @user.errors.full_messages.each do |message| %>
                        <div class="alert alert-danger">
                                <%= message %>
                            
                              <% end %>
                         </div>
                        <% end  %>
                        
                       
                        
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                   
                                      
                                    </thead>
                                    <tbody>
                                     <%= form_for ([:backoffice, @user]) do |f| %>
                                       <div class="col-lg-6">
                                        <label>Email:</label>
                                            <div class="form-group">
                                                <%= f.text_field :email, class: "form-control", placeholder: "Senha"%>      
                                            </div>
                                            <label>Nome:</label>
                                            <div class="form-group">
                                                <%= f.text_field :name, class: "form-control", placeholder: "Nome"%>      
                                            </div>
                                            
                                            <label>Tipo:</label>
                                            <div class="form-group">
                                                 <%= f.select :status , options_for_select(User.statuses.map {|k, v| [k.humanize.capitalize, k]}), {}, { class: "form-control"} %>      
                                            </div>
                                            <label>Empresa</label></br>
                                            <div class="form-group">
                                            <%= f.collection_select :company_id , Company.all , :id, :name, {}, { class: "form-control"} %>
                                            </div>                      
                                            <label>Senha:</label>
                                            <div class="form-group">
                                                <%= f.password_field :password, class: "form-control", placeholder: "Confirmar Senha"%>      
                                            </div>
                                            <label>Confirmar senha:</label>
                                            <div class="form-group">
                                                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Ex: Pizzaria"%>      
                                            </div>
                                            <%= f.submit "Salvar" %>
                                        </div></br>
                                           
                                    <% end %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-6 -->
                    
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->