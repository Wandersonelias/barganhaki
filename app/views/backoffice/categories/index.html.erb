            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Barganhaki</h1>
                        <% if notice %>
                        <div class="alert alert-success">
                                <%= notice %> 
                            </div>
                    <% end %>
                         <div class="panel panel-default">
                        <div class="panel-heading">
                            Categorias
                            <%= link_to new_backoffice_category_path, class: "btn btn-success btn-circle pull-right", style:"margin-top: -5px" do   %>
                                <i class="fa fa-plus"></i>
                            <% end %>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Descrição</th>
                                            <th style = "whidth: 50px">Icone</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% @categories.each do |categorias| %>
                                        <tr>
                                            <td><%= categorias.id %></td>
                                            <td><%= categorias.description  %></td>
                                            <td style = "width: 60px"><%= image_tag categorias.icon.url(:thumb) %></td>
                                            
                                            <td style="width: 150px">
                                            <%= link_to edit_backoffice_category_path(categorias.id), class:"btn btn-primary btn-circle btn-lg" do  %>
                                                <i class="fa fa-edit"></i>
                                            <% end %>
                                            <button type="button" disable="disable" class="btn btn-danger btn-circle btn-lg">
                                                <i class="fa fa-times"></i>
                                            </button>
                                            </td>     
                                        </tr>
                                     <% end %>   
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
