
<!-- Page Content -->
<div id="page-content-wrapper">
    <div class="container-fluid">
                
            
<h1>Meus Produtos</h1>
<div class="row">
<div class="col-md-8">
<table class="table table-hover">

  <thead calss="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Imagem</th>
      <th scope="col">Titulo</th>
      <th scope="col">Preço de venda</th>
      <th scope="col">Categoria</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
<% @products.each do |produtos| %>  
  <tbody>
    <tr>
      <td width="50px"><%= produtos.id %></td>
      <td width="100px"><%= image_tag produtos.image.url(:small) %></td>
      <td width="250px"><%= produtos.title %></td>
      <td width="120px"><%= produtos.pricefor %></td>
      <td width="150px"><%= produtos.category.description %></td>
      
      <td>
        <%= link_to edit_site_prefil_product_path(produtos.id), class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
        <% end %>
          
          <%= link_to edit_site_prefil_product_path(produtos.id), class: "btn btn-danger" do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir
        <% end %>
      </td>
      
    </tr>
  </tbody>

<% end %>
</table>

</div>
<!--paginação alinhamento -->
  </div>
      <div class="row">
          <div class="col-md-8 text-center">
              <%= will_paginate @products %>
          </div>
      </div>
<!-- /#page-content-wrapper -->
  </div>
</div>
<!-- /#page-content-wrapper -->