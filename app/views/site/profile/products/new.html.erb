<div id="container">
    <div class="row">
    <% if notice %>
            <div class="alert alert-success">
                <%= notice %> <a href="#" class="alert-link">Alert Link</a>.
            </div>
    <% end %>


    <% if @product.errors.any? %>
        <% @product.errors.full_messages.each do |message| %>
            <div class="alert alert-danger">
            <%= message %>                
        <% end %>
        </div>
    <% end %>
</div>

<div class="container-fluid">
        
  
  <h1>Cadastro de produtos</h1>
    
    <%= form_for [:site, :profile, @product], html: {multpart: true} do |f| %>

            <div class="row">
                <div class="form-group col-xs-6">
                    <label for="exampleInputEmail1">Titulo</label>
                    <%= f.text_field :title, class: "form-control", placeholder: "Ex: Pizzaria"%>
                </div>
            </div>
            
            <div class="row">
            <div class="form-group col-xs-4">
                <label for="exampleInputPasswod1">Preço Original</label>
                <%= f.text_field :priceof, class: "form-control valor", placeholder: "Ex: Pizzaria"%>
            </div>
            <div class="form-group col-xs-4">
                <label for="exampleInputPassword1">Promocional</label>
                <%= f.text_field :pricefor, class: "form-control valor", placeholder: "Ex: Pizzaria"%>
            </div>
            </div>
            <div class="row">
            <div class="form-group col-xs-5">
                <label for="exampleInputPassword1">Categoria</label></br>
                <%= f.collection_select :category_id , Category.all , :id, :description, {}, { class: "form-control"} %>
            </div>
                <%= f.hidden_field :company,  value: current_user.company_id, class: "form-control valor", placeholder: "Ex: Pizzaria" %>
            </div>
            <div class="row">
            <div class="form-group col-md-4">
                <label for="exampleInputPassword1">Situação</label></br>
                 <%= f.select :situation , options_for_select(Product.situations.map {|k, v| [k.humanize.capitalize, k]}), {}, { class: "form-control"} %>

            </div>
            </div>
            <div class="row">
            <div class="form-group col-xs-6">
                <label for="exampleInputFile">Imagem</label><br>                
                <% if @product.image.present? %>
                    <%= image_tag @product.image, class: "thumbnail" %>    
                <% end %>
            </div>
            </div>
            <div class="row">
            <div class="form-group col-xs-4">
                <label for="exampleInputFile">File input</label>
                <!--<input type="file" id="exampleInputFile"> -->
                <%= f.file_field :image , calss: "form-control"%>
            </div>
            </div>
            <div class="row">          
            <div class="form-group col-xs-8">
                <label for="exampleInputPassword1">Descrição</label>
                <%= f.text_area :description, class: "form-control", placeholder: "Ex: Pizzaria", row: 5%>
                <!--<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">-->
            </div>
            </div>
            <div class="row">
            <div class="form-group col-md-4">
                <%= f.submit "Salvar", class: "btn btn-default" %>
            </div>
            </div>
    <% end %>


<!-- /#page-content-wrapper -->
  </div>
</div>
<!-- /#page-content-wrapper -->