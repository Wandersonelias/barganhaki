<div class="container">
<h1>Meus Produtos</h1>
<div class="row">
<div class="col-md-12">
<table class="table table-hover">

  <thead calss="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Imagem</th>
      <th scope="col">Titulo</th>
      <th scope="col">Preço de venda</th>
      <th scope="col">Categoria</th>
      <th scope="col">User</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
<% @products.each do |produtos| %>  
  <tbody>
    <tr>
      <td width="50px"><%= produtos.id %></td>
      <td width="100px"><%= image_tag produtos.small_image %></td>
      <td width="250px"><%= produtos.title %></td>
      <td width="100px"><%= produtos.pricefor %></td>
      <td width="100px"><%= produtos.category.description %></td>
      <td width="100px"><%= produtos.company.name %></td>
      <td width="100px"><%= produtos.situation %></td>
      <td width="300px">
        <%= link_to edit_site_profile_product_path(produtos.id), class: "btn btn-primary" do %> 
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
        <% end %>
          
          <%= link_to site_profile_product_path(produtos.id), method: :delete, class: "btn btn-danger", data: {confirm: "Vode deseja excuir #{produtos.title} ?"} do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir
        <% end %>
      </td>
      
    </tr>
  </tbody>

<% end %>
</table>

</div>
</div>
<!--paginação alinhamento -->
<div class="row">
          <div class="col-md-8 text-center">
              <%= will_paginate @products %>
          </div>
 </div>