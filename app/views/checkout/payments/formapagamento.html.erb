<div class="container">
<h1>Pagamento do pedido</h1>

<form>
    <div class="row">
        <div class="form-group col-md-6">
          <label for="inputEmail4">Nome</label>
          <input type="text" class="form-control" id="inputName4" value= "<%= current_user.name %>"placeholder="Email">
        </div>
    </div> 

    <div class="row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Email</label>
        <input type="text" class="form-control" id="inputEmail4" value= "<%= current_user.email %>"  placeholder="Email">
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <label for="inputAddress">Address</label>
        <input type="text" class="form-control" id="inputAddress" value= "<%= current_user.address %>" placeholder="1234 Main St">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-row col-md-6">
        <div class="form-group col-md-6">
          <label for="inputNameCard">Numero do Cartão:</label>
          <input type="text" class="form-control" id="numeroCartao" placeholder="0000000000000000">
        </div>
    </div>
  </div>

  <div class="row">
  <div class="form-row col-md-6">
      <div class="form-group col-md-6">
        <label for="inputNameCard">Nome do Cartão:</label>
        <input type="text" class="form-control" id="nomeCartao" placeholder="Maria M Santos">
      </div>
  </div>
  </div>
  <div class="row">
    <div class="form-row col-md-6">
